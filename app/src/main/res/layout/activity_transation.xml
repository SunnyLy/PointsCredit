<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.michel.pointscredit.view.widget.PCCommonTitleLayout
        android:id="@+id/transaction_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:title_content="@string/Transactions" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/transaction_listview"
        android:layout_margin="5dp"
        android:layout_below="@+id/transaction_title"
        android:background="@drawable/round_rectangle_blue_stroke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>