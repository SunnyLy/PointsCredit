<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.michel.pointscredit.view.activity.MainActivity">

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="@string/Do_you_still_go_to_ATM"
        android:textAlignment="center"
        android:textColor="#B9B9B9" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="311dp"
        android:scaleType="fitXY"
        android:src="@drawable/main_header" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:text="Points Credit"
        android:textAlignment="center"
        android:textColor="#6581F0"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_accounted"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/btn_newUser"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="52dp"
        android:background="@drawable/round_rectangle_blue"
        android:text="@string/I_have_an_account"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_newUser"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="52dp"
        android:background="@drawable/round_rectangle_white"
        android:text="@string/I_am_a_new_user"
        android:textAllCaps="false"
        android:textColor="@color/color_6581F0" />
</RelativeLayout>
