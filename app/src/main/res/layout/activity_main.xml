<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.michel.pointscredit.view.activity.WelcomeActivity">

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:lineSpacingExtra="8sp"
        android:text="@string/Do_you_still_go_to_ATM"
        android:textAlignment="center"
        android:textColor="@color/color_999999"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="299dp"
        android:scaleType="fitXY"
        android:src="@drawable/main_header" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="33dp"
        android:text="Points Credit"
        android:textAlignment="center"
        android:textColor="@color/color_6492FF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_accounted"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_above="@+id/btn_newUser"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:background="@drawable/round_rectangle_blue"
        android:text="@string/I_have_an_account"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_newUser"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:background="@drawable/round_rectangle_white"
        android:text="@string/I_am_a_new_user"
        android:textAllCaps="false"
        android:textColor="@color/color_6581F0" />
</RelativeLayout>
